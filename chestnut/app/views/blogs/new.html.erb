<main>
  <h2>Create Blog</h2>
  <%= form_with model:@blog, local:true do |f| %>
  <% if @blog.errors.any? %>
    <%= @blog.errors.count %>件のエラーが発生しました
    <% @blog.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= attachment_image_tag @blog,:image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "imag2.jpg"%><br/>
 <label class="control-label">Photo</label>
 <div> <%= f.attachment_field :image %></div>
  <label class="control-label">Title</label>
  <div><%= f.text_field :title %></div>
  <label class="control-label">Caption</label>
 <div><%= f.text_area :caption %></div>
  <div><%= f.submit 'Create Blog' %></div>
<% end %>
</main>